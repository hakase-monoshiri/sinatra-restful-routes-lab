<!DOCTYPE html>
<html>
    <head>
        <title>Recipes</title>
    </head>
    <body>
        <h1>All Recipes</h1>
        <ol>
            <%@recipes.each do |recipe|%>
            <li>
            <h2><%= recipe.name %> <h2> <br>
            <p> <%= recipe.ingredients %> </p> <br>
            <p> <%= recipe.cook_time %> </p> </li>
            <a href="/recipes/<%= recipe.id %>"> view </a>
            <% end %>
        </ol>
    </body>
</html>